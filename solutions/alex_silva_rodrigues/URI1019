import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int seconds = sc.nextInt();
		int hours = seconds/3600;;
		int restoHours = seconds - hours*3600;
		
		int minutes = restoHours/60;
		int restoMinutes = restoHours - minutes*60;
		
		System.out.println(hours + ":" + minutes + ":" + restoMinutes);
				
	
	}

}
